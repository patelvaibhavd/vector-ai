# ============================================
# EMBEDDING PROVIDER (for vector search)
# ============================================
# 'local' - FREE, uses all-MiniLM-L6-v2 (384 dimensions)
# 'openai' - Paid, uses text-embedding-3-small (1536 dimensions)
EMBEDDING_PROVIDER=local

# ============================================
# LLM PROVIDER (for answer generation)
# ============================================
# 'local'  - FREE, returns relevant text (no AI generation)
# 'groq'   - FREE, AI answers using Llama 3.1
# 'gemini' - FREE, AI answers using Google Gemini
# 'openai' - Paid, AI answers using GPT
LLM_PROVIDER=local

# ============================================
# GROQ CONFIGURATION (FREE)
# ============================================
# Get FREE API key at: https://console.groq.com
# To use: Set LLM_PROVIDER=groq above
GROQ_API_KEY=
GROQ_CHAT_MODEL=llama-3.1-8b-instant

# ============================================
# GOOGLE GEMINI CONFIGURATION (FREE tier)
# ============================================
# Get FREE API key at: https://makersuite.google.com/app/apikey
# To use: Set LLM_PROVIDER=gemini above
GEMINI_API_KEY=
GEMINI_CHAT_MODEL=gemini-1.5-flash

# ============================================
# OPENAI CONFIGURATION (Paid)
# ============================================
# Get API key at: https://platform.openai.com
# To use: Set EMBEDDING_PROVIDER=openai and/or LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000

# ============================================
# VECTOR SEARCH CONFIGURATION
# ============================================
CHUNK_SIZE=300
CHUNK_OVERLAP=30
TOP_K_RESULTS=1
SIMILARITY_THRESHOLD=0.3

# ============================================
# UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

