# ============================================
# Vector-AI Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.sample .env

# --------------------------------------------
# Embedding Provider
# --------------------------------------------
# Options: 'openai' (recommended) or 'local'
# - openai: Uses OpenAI API for high-quality embeddings & GPT answers
# - local: Uses Transformers.js (free, offline, no API key needed)
EMBEDDING_PROVIDER=openai

# --------------------------------------------
# OpenAI Configuration
# --------------------------------------------
# Required when EMBEDDING_PROVIDER=openai
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Embedding model (default: text-embedding-3-small)
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Chat model for answer generation (default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_CHAT_MODEL=gpt-4o-mini

# --------------------------------------------
# Server Configuration
# --------------------------------------------
# Port to run the server on
PORT=3000

# --------------------------------------------
# Document Processing
# --------------------------------------------
# Maximum characters per text chunk (smaller = more precise, larger = more context)
CHUNK_SIZE=300

# Overlap between chunks (helps maintain context across chunk boundaries)
CHUNK_OVERLAP=30

# --------------------------------------------
# Search Configuration
# --------------------------------------------
# Number of relevant chunks to retrieve per query
TOP_K_RESULTS=1

# Minimum similarity score (0-1) to include in results
# Lower = more results, Higher = more relevant results only
SIMILARITY_THRESHOLD=0.3

# --------------------------------------------
# Upload Configuration
# --------------------------------------------
# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Directory to store uploaded files
UPLOAD_DIR=./uploads
